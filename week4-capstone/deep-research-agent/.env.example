# Deep Research Agent - Environment Configuration
# =================================================================
# Copy this file to .env and update the values
# Command: cp .env.example .env
# =================================================================

# =================================================================
# Security Configuration
# =================================================================
# JWT Secret for authentication (CHANGE THIS!)
# Generate with: openssl rand -base64 32
JWT_SECRET=please-change-this-to-a-secure-random-string-min-32-characters

# =================================================================
# Server Configuration
# =================================================================
# Gin mode: debug, release, or test
GIN_MODE=release

# Server port
PORT=8080

# =================================================================
# Database Configuration
# =================================================================
# Path to SQLite database
DATABASE_PATH=/app/data/research.db

# =================================================================
# File Storage Configuration
# =================================================================
# Upload directory for documents
UPLOAD_DIR=/app/uploads/files

# Export directory for generated reports
EXPORT_DIR=/app/exports

# =================================================================
# Research Agent Configuration
# =================================================================
# Maximum concurrent workers for research jobs
RESEARCH_AGENT_MAX_WORKERS=10

# Maximum concurrent tools per research job
RESEARCH_AGENT_CONCURRENT_TOOLS=5

# Maximum research steps
RESEARCH_AGENT_MAX_STEPS=10

# Research timeout (e.g., 5m, 10m, 1h)
RESEARCH_AGENT_TIMEOUT=5m

# =================================================================
# Rate Limiting Configuration
# =================================================================
# Enable rate limiting
RESEARCH_AGENT_RATE_LIMIT_ENABLED=true

# Maximum requests per hour per user
RESEARCH_AGENT_MAX_REQUESTS_PER_HOUR=100

# Maximum concurrent jobs per user
RESEARCH_AGENT_MAX_CONCURRENT_JOBS=10

# =================================================================
# Tool Configuration
# =================================================================
# Enable web search
RESEARCH_AGENT_ENABLE_WEB_SEARCH=true

# Enable Wikipedia
RESEARCH_AGENT_ENABLE_WIKIPEDIA=true

# Enable PDF processing
RESEARCH_AGENT_ENABLE_PDF=true

# Enable DOCX processing
RESEARCH_AGENT_ENABLE_DOCX=true

# =================================================================
# Monitoring Configuration (Optional)
# =================================================================
# Grafana admin credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# =================================================================
# Development/Testing Settings
# =================================================================
# Enable debug logging
DEBUG=false

# Enable API documentation
ENABLE_SWAGGER=true

# Enable CORS
ENABLE_CORS=true
